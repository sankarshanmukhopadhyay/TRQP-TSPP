{
  "$id": "https://schemas.trqp.example/evidence/tspp_posture_bundle_descriptor.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TRQP TSPP Posture Evidence Bundle Descriptor",
  "type": "object",
  "required": [
    "bundle_version",
    "profile",
    "generated_at",
    "target",
    "artifacts",
    "artifact_index"
  ],
  "properties": {
    "bundle_version": {
      "type": "string"
    },
    "profile": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "target": {
      "type": "object"
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "artifact_index": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "kind",
          "path",
          "produced_by"
        ],
        "properties": {
          "kind": {
            "type": "string"
          },
          "artifact_kind": {
            "type": [
              "string",
              "null"
            ]
          },
          "path": {
            "type": "string"
          },
          "produced_by": {
            "type": "string"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "media_type": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}